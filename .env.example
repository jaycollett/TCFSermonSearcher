# Environment variables for TCF Sermon Searcher
# Copy this file to .env and customize as needed

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=True

# Database paths
DATABASE_PATH=./data/sermons.db
AUDIOFILES_DIR=./data/audiofiles

# API Key (change this in production!)
SERMON_API_TOKEN=your-api-token-here

# Logging
LOG_LEVEL=INFO